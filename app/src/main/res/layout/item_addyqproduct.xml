<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="15dp"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >


    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <TextView
           android:id="@+id/tv"
           android:padding="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/delect"
            android:textColor="@color/red"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_margin="2dp"
            >


            <TableRow >


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.2dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="系列" />


                <TextView
                    android:id="@+id/xilie"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:text="" />


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="产品单位" />


                <TextView
                    android:id="@+id/danjian"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="#ffffffff"
                    android:gravity="center"
                    android:text="" />


            </TableRow>


            <TableRow>


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="材质" />



                <TextView
                    android:id="@+id/caizhi"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:gravity="center"
                    android:background="#ffffffff"
                    android:text="" />


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="产品数量" />

                <TextView
                    android:id="@+id/danjiancount"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:gravity="center"
                    android:background="#ffffffff"
                     />


            </TableRow>


            <TableRow>


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="套件选择" />



                <TextView
                    android:id="@+id/taojian"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:gravity="center"
                    android:background="#ffffffff"
                    android:text="整套" />


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="收货仓库" />



                <TextView
                    android:id="@+id/shck"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:gravity="center"
                    android:background="#ffffffff"
                    android:text="" />

            </TableRow>


            <TableRow android:id="@+id/tr"
                android:visibility="gone">


                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="色号" />

                <TextView
                    android:id="@+id/selectcolor"
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:gravity="center"
                    android:background="#ffffffff"
                    />






                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:background="@color/biaoge"
                    android:gravity="center"
                    android:text="" />

                <TextView
                    android:padding="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:gravity="center"
                    android:background="#ffffffff"
                    />


            </TableRow>


        </TableLayout>


    </LinearLayout>



</LinearLayout>