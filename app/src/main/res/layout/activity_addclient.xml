<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.AddclientActivity">

    <com.example.erpqpp.myview.TitleBarView
        android:id="@+id/tbv_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/add_tv"
            android:text="*"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/red"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.example.erpqpp.myview.Item
        android:layout_toRightOf="@+id/add_tv"
        android:id="@+id/add_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入客户名称"
        app:name="客户名称"/>

    </RelativeLayout>

    <!--<com.example.erpqpp.myview.Item
        android:id="@+id/add_cards"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入身份证号"
        app:input_type="number"
        app:name="身份证号"/>-->

    <LinearLayout
        android:paddingLeft="10dp"
        android:padding="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_black"
            android:textSize="@dimen/textsize14"
            android:text="身份证" />


        <EditText
            android:id="@+id/input_card"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请输入身份证号"
            android:digits="0123456789X"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textColorHint="@color/text_gray"
            android:textSize="@dimen/textsize13"
             />

    </LinearLayout>


    <com.example.erpqpp.myview.Item
        android:id="@+id/add_date"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:content_color="@color/text_black"
        app:content_input="请选择出生日期"
        app:content_show="true"
        app:name="出生日期"/>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tel_tv"
        android:text="*"
        android:textSize="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/red"
        android:paddingLeft="5dp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_tel"
        android:layout_toRightOf="@+id/tel_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入手机号"
        app:input_type="number"
        app:name="手机号"/>

</RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/addres_tv"
            android:text="*"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/red"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_addres"
        android:layout_toRightOf="@+id/addres_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入联系地址"
        app:name="联系地址"/>

    </RelativeLayout>

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_tel_bz"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入手机号(备注)"
        app:name="手机号(备注)"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/region_tv"
            android:text="*"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/red"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_region"
        android:layout_toRightOf="@+id/region_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入所在地区"
        app:name="所在地区"/>

    </RelativeLayout>

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_shopdate"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:content_color="@color/text_black"
        app:content_input="请选择门店成立时间"
        app:content_show="true"
        app:name="门店成立时间"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/type_tv"
            android:text="*"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:textColor="@color/red"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_type"
        android:layout_toRightOf="@+id/type_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:content_color="@color/text_black"
        app:content_input="请选择类型"
        app:content_show="true"
        app:name="类型"/>

    </RelativeLayout>

    <com.example.erpqpp.myview.Item
        android:id="@+id/add_remark"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:input_show="true"
        app:content_color="@color/text_black"
        app:input_hint="请输入备注"
        app:name="备注"/>



    <Button
        android:id="@+id/add_bt"
        android:text="确认"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/textsize18"
        android:layout_width="match_parent"
        android:layout_margin="50dp"
        android:background="@color/title_color"
        android:layout_height="wrap_content" />


</LinearLayout>