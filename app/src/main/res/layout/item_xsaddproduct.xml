            </TableRow>
        </TableLayout>

         <android.support.v7.widget.RecyclerView
             android:layout_marginTop="5dp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>