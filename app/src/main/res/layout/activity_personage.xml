<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PersonageActivity">

    <com.example.erpqpp.myview.TitleBarView
        android:id="@+id/tbv_titlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

       <RelativeLayout
           android:id="@+id/updata"
           android:layout_below="@+id/tbv_titlebar"
           android:background="@color/white"
           android:layout_marginTop="20dp"
           android:padding="5dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:layout_marginLeft="5dp"
               android:layout_centerVertical="true"
               android:text="头像"
               android:textColor="@color/black"
               android:textSize="@dimen/sp_14"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />


           <ImageView
               android:id="@+id/header"
               android:layout_alignParentRight="true"
               android:layout_marginRight="5dp"
               android:src="@drawable/shape_mine_portrait"
               android:layout_width="50dp"
               android:layout_height="50dp" />



       </RelativeLayout>


    <com.example.erpqpp.myview.Item
        android:id="@+id/name"
        android:layout_below="@+id/updata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:content_color="@color/text_black"
        app:content_input="你猜"
        app:content_show="true"
        app:name="昵称"/>

    <com.example.erpqpp.myview.Item
        android:id="@+id/sex"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:arrow_show="false"
        app:content_color="@color/text_black"
        app:content_input="你猜"
        app:content_show="true"
        app:name="性别"/>

    <Button
        android:id="@+id/bt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="#f00"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:text="退出登录"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />




</RelativeLayout>