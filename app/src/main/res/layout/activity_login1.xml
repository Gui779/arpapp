<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="50dp"
    android:id="@+id/ly"
    tools:context=".ui.LoginActivity">




    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/shape_remark_bg"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin15"
        android:text="登录账号"
        android:textColor="@color/login_text"
        android:textSize="@dimen/textsize13"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <EditText
        android:id="@+id/et_login_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin5"
        android:background="@color/white"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:maxLength="11"
        android:padding="@dimen/margin15"
        android:textColorHint="@color/hind_color"
        android:textSize="@dimen/textsize14"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin15"
        android:background="@color/line"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tv_login_type"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin15"
        android:layout_marginTop="@dimen/margin15"
        android:text="验证码"
        android:textColor="@color/login_text"
        android:textSize="@dimen/textsize13"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_login_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/margin5"
            android:layout_weight="1"
            android:background="@color/white"
            android:hint="请输入密码"
            android:inputType="number"
            android:padding="@dimen/margin15"
            android:textColorHint="@color/hind_color"
            android:textSize="@dimen/textsize14"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/tv_login_code"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/margin20"
            android:background="@drawable/shape_login_code"
            android:gravity="center"
            android:padding="@dimen/margin5"
            android:text="获取验证码"
            android:textColor="@color/red"
            android:textSize="@dimen/sp_12"
            tools:ignore="HardcodedText,RtlHardcoded" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/margin10"
        android:layout_marginLeft="@dimen/margin15"
        android:background="@color/line"
        tools:ignore="RtlHardcoded" />

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_login_change"
            style="@style/paddingStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_press_bg"
            android:text="密码登录"
            android:textColor="@color/login_text"
            android:textSize="@dimen/textsize13"
            tools:ignore="HardcodedText" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="36dp"
        android:background="@color/title_color"
        android:paddingBottom="@dimen/margin10"
        android:paddingTop="@dimen/margin10"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize18"
        tools:ignore="HardcodedText" />

</LinearLayout>