<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <TextView
             android:id="@+id/kehu_name"
             android:layout_marginLeft="15dp"
             android:text="客户名称:张宇轩"
             android:gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="30dp" />

         <TextView
             android:id="@+id/jiaoyi_date"
             android:layout_marginLeft="15dp"
             android:text="交易日期: 2016-05-96"
             android:gravity="center_vertical"
             android:layout_width="wrap_content"
             android:layout_height="30dp" />

         <android.support.v7.widget.RecyclerView
             android:id="@+id/rc"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"/>




     </LinearLayout>


    <TextView
        android:visibility="gone"
        android:id="@+id/price"
        android:text="20000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    </RelativeLayout>

    <TextView
        android:id="@+id/fahuo"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_toLeftOf="@+id/fanhui"
        android:layout_marginRight="15dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="发货"
        android:background="@drawable/button_qx"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



<View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/tv_topright"/>


</LinearLayout>