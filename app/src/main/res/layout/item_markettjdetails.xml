<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="15dp"
         android:layout_marginRight="15dp">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:layout_margin="2dp"
        >


        <TableRow >


            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.2dp"
                android:background="@color/biaoge"
                android:gravity="center"
                android:text="产品名称" />


            <TextView
                android:id="@+id/name"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffffff"
                android:gravity="center"
                />


            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="@color/biaoge"
                android:gravity="center"
                android:text="单价" />


            <TextView
                android:id="@+id/dprice"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffffff"
                android:gravity="center"
                 />


        </TableRow>
        <TableRow>


            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:gravity="center"
                android:background="@color/biaoge"
                android:text="系列" />


            <TextView
                android:id="@+id/xilie"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffffff"
                android:gravity="center"
                />


            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="@color/biaoge"
                android:gravity="center"
                android:text="色号"
                />
            <TextView
                android:id="@+id/color"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffffff"
                android:gravity="center"
                />


        </TableRow>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rc"
            android:focusable="true"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>





        <TableRow>


            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:gravity="center"
                android:background="@color/biaoge"
                android:text="材质" />


            <TextView
                android:id="@+id/caizhi"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffffff"
                android:gravity="center"
                />


            <TextView
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="@color/biaoge"
                android:gravity="center"
                android:text="数量"
                />
            <TextView
                android:id="@+id/count"
                android:padding="5dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_margin="0.5dp"
                android:background="#ffffffff"
                android:gravity="center"
                />


        </TableRow>

    </TableLayout>




     </LinearLayout>

</LinearLayout>